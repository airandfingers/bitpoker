<% var title = 'Bitcoin Poker- Account Information'; %>
<% include head %>
    <h1> Account Information</h1>
    <div>
    username: <%= username %>
    </div>
    <div>
    registration date: <%= registration_date %>
    </div>
    <div>
        <form action="/account" method="post">
            email address: 
                <% if (email === undefined) { %>
                <input field="text" name="email" placeholder="enter e-mail address" />
                <button> submit </button>
                <% } else { %>
                     <%= email %>
                   <% } %>
       </form>
    </div>
    <div>
        email confirmed: <%= email_confirmed %>
        <form action="/remove_email" method="post">
            <button> Remove E-mail </button>
        </form>
    </div>
    <div id="maobucks">
        mao bucks: <%= maobucks %>
        <form action ="/update_maobucks" method="post">
        <input type="number" name="maobucks_update" placeholder="100" />
        <button> god mode my Maobuckz </button>
        </form>
    </div>
    
    <!--bitcoins-->
    <div>
        <h3>
        Bitcoin Management
        </h3>
        bitcoins: <%= bitcoins %>
        <br />
        <a href="/deposit_bitcoins"> <button>deposit bitcoins</button></a>
        <a href="/withdraw_bitcoins"><button>withdraw bitcoins</button></a>
    </div>

    <!--delete account -->
    <div>
        <h3>Delete Account</h3>
        <form action="/delete_account" method="post">
        <button class="btn btn-inverse">Delete</button>
        </form>
    </div>


    <% include plugins %>
