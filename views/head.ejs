    <header>
        <div class="navbar">
            <ul>
                <%
                var pages = [
                    { name: 'lobby', href: '/' },
                    { name: 'games', 
                      href: '#', 
                      dropdown: [
                        { name: '1', href: '/game/1' },
                        { name: '2', href: '/game/2' },
                      ],
                    }
                ],
                    i,
                    j,
                    len,
                    len2,
                    page_name,
                    page_href,
                    page_dropdown,
                    subpage_name,
                    subpage_href;

                for (i = 0, len = pages.length; i < len; i++) {
                    page_name = pages[i].name;
                    page_href = pages[i].href;
                    page_dropdown = pages[i].dropdown;
                %>
                    <li>
                        <a href="<%= page_href %>">
                            <%= page_name.toUpperCase() %>
                        </a>
                       <!--write nested ul for dropdowns-->
                        <% if (page_dropdown !== undefined ) { %>
                          <ul>
                          <% for (j=0, len2 = page_dropdown.length; j < len2; j++) {
                            subpage_name = page_dropdown[j].name;
                            subpage_href = page_dropdown[j].href;
                            %>
                            <li>
                              <a href="<%= subpage_href %>">
                                  <%= subpage_name %>
                              </a>
                            </li>
                          <% } %>  
                          </ul>
                        <% } %>
                    </li>
                <% } %>
                <li class="right">
                  <% if (locals.username) { %>
                    <a href="/logout">LOGOUT</a>
                  <% } else { %>
                    <a href="/login">LOGIN</a>
                  <% } %>
                </li>
                <li class="right">
                  <% if (locals.username) { %>
                    <%= locals.username.toUpperCase() %>    
                  <% } else { %>
                    <a href="/register">REGISTER</a>
                  <% } %>
                </li>
            </ul>
        </div>
    </header>