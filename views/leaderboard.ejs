<% include head %>

    <div id="container">
        <h1>Leaderboards</h1>

        <div class="leaderboard">
            <h2>Funbucks</h2>
            <table id="funbucks_leaderboard">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Funbucks</th>
                    </tr>
                </thead>
                <tbody>
                  <%
                  var i, len, leader;

                  for (i = 0, len = leaders.funbucks.length; i < len; i++ ) {
                    var leader = leaders.funbucks[i];
                  %>
                    <tr>
                        <td><%= i+1 %> </td>
                        <td><%= leader.username %> </td>
                        <td><%= leader.funbucks %> </td>
                    </tr>
                 <% } %>
                </tbody>
            </table>
        </div>

        <div class="leaderboard">
            <h2>Satoshi</h2>
            <table id="satoshi_leaderboard">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Satoshi</th>
                    </tr>
                </thead>
                <tbody>
                  <%
                  for (i = 0, len = leaders.satoshi.length; i < len; i++ ) {
                    var leader = leaders.satoshi[i];
                  %>
                    <tr>
                        <td><%= i+1 %> </td>
                        <td><%= leader.username %> </td>
                        <td><%= leader.satoshi %> </td>
                    </tr>
                 <% } %>
                </tbody>
            </table>
        </div>

    </div> <!-- container-->

    <% include plugins %>
    <!-- DataTable -->
    <script src="/js/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/leaderboard.js"></script>

<% include foot %>