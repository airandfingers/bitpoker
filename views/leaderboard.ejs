<% var title = 'Bitcoin Poker- Leaderboard'; %>
<% include head_start %>
<% include head_end_and_header %>

    <div id="container">
        <h1>Leaderboards</h1>

        <div class="leaderboard">
          <h2>Funbucks</h2>
          <table id="funbucks_leaderboard">
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>Funbucks</th>
              </tr>
            </thead>
            <tbody>
              <%
              var i, len
                , username, funbucks, satoshi;

              for (i = 0, len = funbucks_leaders.length; i < len; i++ ) {
              %>
                  <tr>
                      <td><%= i+1 %> </td>
                      <td><%= funbucks_leaders[i].username %> </td>
                      <td><%= funbucks_leaders[i].funbucks %> </td>
                  </tr>
             <% } %>
            </tbody>
          </table>
        </div>

        <div class="leaderboard">
          <h2>Satoshi</h2>
          <table id="satoshi_leaderboard">
            <thead>
              <tr>
                <th>#</th>
                <th>Username</th>
                <th>Satoshi</th>
              </tr>
            </thead>
            <tbody>
              <%
              var i, len
                , username, funbucks, satoshi;

              for (i = 0, len = satoshi_leaders.length; i < len; i++ ) {
              %>
                  <tr>
                      <td><%= i+1 %> </td>
                      <td><%= satoshi_leaders[i].username %> </td>
                      <td><%= satoshi_leaders[i].satoshi %> </td>
                  </tr>
             <% } %>
            </tbody>
          </table>
        </div>

    </div> <!-- container-->

    <% include plugins %>
    <!-- DataTable -->
    <script src="/js/vendor/jquery.dataTables.min.js"></script>
    <script src="/js/leaderboard.js"></script>

<% include foot %>