 <% include head %>
    <div id="container" class="account">

        <h2>Send server_message to all players</h2>
        <form class="send_form" action="/send_server_message" method="post">
            <div>
                <label for="message" class="inverse">Message: </label>
                <input id="message" name="message" class="message_input" type="text" placeholder="Hello, World!" autofocus required />
            </div>
            <div>
                <label for="hour_delay" class="inverse">Hours: </label>
                <input id="hour_delay" name="hour_delay" class="delay_input" type="text" number placeholder="0" />
                <label for="minute_delay" class="inverse">Minutes: </label>
                <input id="minute_delay" name="minute_delay" class="delay_input" type="text" number placeholder="0" />
                <label for="second_delay" class="inverse">Seconds: </label>
                <input id="second_delay" name="second_delay" class="delay_input" type="text" number placeholder="0" />
            </div>
            <input value="Send Server Message To All Players" type="submit" />
        </form>

        <h2>Stop all tables</h2>
        <form class="send_form" action="/stop_tables" method="post">
            <div>
                <label for="hour_delay" class="inverse">Hours: </label>
                <input id="hour_delay" name="hour_delay" class="delay_input" type="text" number placeholder="0" />
                <label for="minute_delay" class="inverse">Minutes: </label>
                <input id="minute_delay" name="minute_delay" class="delay_input" type="text" number placeholder="0" />
                <label for="second_delay" class="inverse">Seconds: </label>
                <input id="second_delay" name="second_delay" class="delay_input" type="text" number placeholder="0" />
            </div>
            <input value="Stop All Tables" type="submit" />
        </form>
        <br />
        <% if (typeof message === 'string') { %>
            <p class="inverse"><%= message %></p>
        <% } %>
    </div> <!-- container -->
    
    <% include plugins %>
<% include foot %>