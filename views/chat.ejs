<!-- display chat messages and form -->
<div id="chat_messages">
</div>
              
<form id="chat_form">
    <input type="text" id="chat_sender" 
        <% if (locals.username) { %>
            value="<%= locals.username %>"
        <% }
          else { %>
          value= "Guest"
          <% } %>
    readonly />
    <input type="text" id="chat_message" placeholder="Message" />
    <input type="submit" id="chat_submit" value="Send Message" class="btn"/>
</form>
