<% var title = 'Welcome to Bitcoin Poker!'; %>
<% include head %>
<style>
body {background-image: none;}
</style>
    <div id="container" class="row-fluid">
        <div class="row-fluid">
            <!-- display list of tables -->
            <div id="table_list_lobby" class="span11">
                <% include table_list %>
            </div>
            <div class="span1">
                <% include users %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="chat_container row-fluid">
                <div id="chat_lobby" class="row-fluid">
                    <% include chat %>
                </div>
            </div>
            <!-- include values to expose to scripts -->
            <input type="hidden" id="server_values" data-room_state="<%= room_state %>" />
        </div>

    </div> <!-- container-->

    <% include plugins %>
    <!-- DataTable -->
    <script src="/js/jquery.dataTables.js"></script>
    <script>
    //$(document).ready(function() {
    $('#table_list').dataTable({
        bJQueryUI: true,
        sDom: 'tf',
        sPaginationType: 'full_numbers',
        iDisplayLength: 20
    });

    $('#table_list tbody').on('click', 'tr', function(e) {
      var table_name = $(this).attr('id');
      return popup(table_name);
    });
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>
<% include foot %>